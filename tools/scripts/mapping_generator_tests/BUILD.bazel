load(
    "@rules_python//python:py_test.bzl",
    "py_test",
)

DEPS = [
    "//tools/scripts/mapping_generator",
    "//tools/scripts/mapping_generator:tool",
]

EXTRA_DEPS = {}

TESTS = [
    "mapping_generator_import",
]


[
    py_test(
        name = "%s_test" % name,
        srcs = ["%s_test.py" % name],
        deps = DEPS + (EXTRA_DEPS.get(name, [])),
    ) for name in TESTS
]

test_suite(
    name = "mapping_generator_tests",
    tests = [":%s_test" % name for name in TESTS],
)
