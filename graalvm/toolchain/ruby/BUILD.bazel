"Defines toolchain types for TruffleRuby."

package(default_visibility = ["//visibility:public"])

# Toolchain type: `truffleruby`
#
# Describes a `ruby` binary made available as part of a GraalVM installation of any type. This
# tool may be installed via the GraalVM Updater or provided otherwise.
toolchain_type(name = "truffleruby")

alias(
    name = "toolchain_type",
    actual = "truffleruby",
)
